---
layout: layouts/base.njk
title: Home Page
---

{% for post in collections.post %}
    <div class="p-2 bg-indigo-800 items-center text-indigo-100 leading-none flex lg:inline-flex" role="alert">
        {% for item in post.data.tags %}
            <span class="flex rounded-full bg-indigo-500 px-2 py-1 text-xs font-bold mr-3">#{{item}}</span>
        {% endfor %}
        {{post.data.date | formatDate}}
    </div>
    <h1 class="leading-tight border-b text-4xl font-semibold mb-4 mt-6 pb-2">{{post.data.title}}</h1>

    <div class="markdown border-b-8 border-teal-900 pb-4">
        {{post.templateContent | safe}}
    </div>
{% endfor %}